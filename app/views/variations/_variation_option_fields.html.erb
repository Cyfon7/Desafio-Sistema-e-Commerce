<div class="nested-fields">
  
  <div class="form-inline">
    <div class="field">
      <%= f.select :option_id, Option.all.collect { |op| [op.value, op.id] }, prompt: "Choose Option:" %>
    </div>

    <%= link_to_remove_association f do %>
      <i class="fas fa-minus-square fa-2x"></i>
    <% end %>
  </div>
</div>
