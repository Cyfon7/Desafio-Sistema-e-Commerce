<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>


<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Variation</th>
      <th>Options</th>
      <th>SKU</th>
      <th>Stock</th>
      <th>Added Price</th>
    </tr>
  </thead>
  <tbody>
    <% @product.product_variations.each do |p_variation| %>
      <tr>
        <td><%= p_variation.variation_id %></td>
        <td><%= p_variation.variation.name %></th>
        <td>
          <ul>
            <% p_variation.variation.options.each do |opt| %>
              <li><%= opt.name %>: <%= opt.value %></li>
            <% end %>
          </ul>
        <td>
        <td><%= p_variation.sku %></td>
        <td><%= p_variation.stock %></td>
        <td><%= p_variation.added_price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
