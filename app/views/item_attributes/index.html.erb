<p id="notice"><%= notice %></p>

<h1>Item Attributes</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_attributes.each do |item_attribute| %>
      <tr>
        <td><%= link_to 'Show', item_attribute %></td>
        <td><%= link_to 'Edit', edit_item_attribute_path(item_attribute) %></td>
        <td><%= link_to 'Destroy', item_attribute, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

